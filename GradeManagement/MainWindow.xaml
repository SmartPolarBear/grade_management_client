<Window x:Class="GradeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeManagement"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Log In" Height="280" Width="280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label>Username</Label>
            <TextBox Margin="0,4" MinWidth="128" MaxWidth="256" MaxLines="1"></TextBox>
            <Label>Password</Label>
            <PasswordBox Margin="0,4" MinWidth="128" MaxWidth="256" ></PasswordBox>
        </StackPanel>
        <StackPanel 
            Grid.Row="1"
            Orientation="Horizontal"
            Margin="4">
            <Button Content="Login" Width="64" Margin="4,0"></Button>
            <Button Content="Exit" Width="64" Margin="4,0" Name="ExitButton" Click="ExitButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>